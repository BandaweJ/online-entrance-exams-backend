# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=your-render-db-host
DB_PORT=5432
DB_USERNAME=your-render-db-username
DB_PASSWORD=your-render-db-password
DB_NAME=your-render-db-name

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_EXPIRES_IN=24h

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=your-twilio-phone-number

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.onrender.com

# AI Grader Configuration (Legacy - Optional)
AI_GRADER_API_URL=https://your-ai-scoring-api-url.com/api/grade
AI_GRADER_API_KEY=your-ai-grader-api-key

# OpenAI Configuration (Required for internal AI scoring)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=text-embedding-ada-002
